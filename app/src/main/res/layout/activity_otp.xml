<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    tools:context="com.app.bahokrider.activities.SignupActivity">

    <TextView
        android:id="@+id/tvBack"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/d10dp"
        android:padding="@dimen/d10dp"
        android:text="@string/back"
        android:textColor="@color/black"
        android:textSize="@dimen/d14sp"
        android:textStyle="bold" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:adjustViewBounds="true"
        android:alpha="0.15"
        android:contentDescription="@string/emptystring"
        android:scaleType="centerCrop"
        android:src="@drawable/loginback" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="@dimen/d30dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/d30dp"
            android:lineSpacingExtra="@dimen/d4dp"
            android:text="@string/otp_text"
            android:textAlignment="center"
            android:textColor="#9A9A9A"
            android:textSize="@dimen/d14sp" />

        <TextView
            android:id="@+id/tvMobile"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:lineSpacingExtra="@dimen/d4dp"
            android:textAlignment="center"
            android:textColor="#9A9A9A"
            android:textSize="@dimen/d14sp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/d20dp"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/edOTP1"
                android:layout_width="@dimen/d50dp"
                android:layout_height="@dimen/d50dp"
                android:digits="0987654321"
                android:gravity="center"
                android:imeOptions="actionNext"
                android:inputType="numberDecimal"
                android:maxLength="1"
                android:singleLine="true" />

            <EditText
                android:id="@+id/edOTP2"
                android:layout_width="@dimen/d50dp"
                android:layout_height="@dimen/d50dp"
                android:digits="0987654321"
                android:gravity="center"
                android:imeOptions="actionNext"
                android:inputType="numberDecimal"
                android:maxLength="1"
                android:singleLine="true" />

            <EditText
                android:id="@+id/edOTP3"
                android:layout_width="@dimen/d50dp"
                android:layout_height="@dimen/d50dp"
                android:digits="0987654321"
                android:gravity="center"
                android:imeOptions="actionNext"
                android:inputType="numberDecimal"
                android:maxLength="1"
                android:singleLine="true" />

            <EditText
                android:id="@+id/edOTP4"
                android:layout_width="@dimen/d50dp"
                android:layout_height="@dimen/d50dp"
                android:digits="0987654321"
                android:gravity="center"
                android:imeOptions="actionDone"
                android:inputType="numberDecimal"
                android:maxLength="1"
                android:singleLine="true" />


        </LinearLayout>

        <Button
            android:id="@+id/btnSubmit"
            android:layout_width="match_parent"
            android:layout_height="@dimen/ButtonSize"
            android:layout_marginTop="@dimen/d22dp"
            android:background="@drawable/btn_feature_background"
            android:stateListAnimator="@null"
            android:text="@string/submit"
            android:textColorLink="@color/linkColor"
            android:textColor="@color/white"
            android:textSize="@dimen/d20sp" />

        <TextView
            android:id="@+id/tvResend"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:lineSpacingExtra="@dimen/d4dp"
            android:text="@string/dont_received"
            android:textAlignment="center"
            android:textColor="#9A9A9A"
            android:layout_margin="@dimen/d30dp"
            android:textSize="@dimen/d14sp" />

    </LinearLayout>


</RelativeLayout>
