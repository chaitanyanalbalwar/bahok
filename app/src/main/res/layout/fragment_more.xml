<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/backgroundgray"
    android:clickable="true"
    android:focusable="true"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary"
        android:gravity="center"
        android:padding="@dimen/d10dp"
        android:text="@string/more_options"
        android:textColor="@color/white"
        android:textSize="@dimen/d20sp"
        android:textStyle="bold" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/d10dp"
                android:layout_marginTop="@dimen/d10dp"
                android:text="@string/account"
                android:textSize="@dimen/d20sp"
                android:theme="@style/Title" />

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/d10dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/d10dp"
                    android:orientation="vertical">

                    <LinearLayout
                        android:id="@+id/llMyProfile"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="@string/my_profile"
                            android:textSize="@dimen/d16sp" />

                        <ImageView
                            android:layout_width="@dimen/d40dp"
                            android:layout_height="@dimen/d40dp"
                            android:layout_gravity="end"
                            android:contentDescription="@string/emptystring"
                            android:padding="@dimen/d10dp"
                            android:rotation="180"
                            android:src="@drawable/ic_arrow_back_black_24dp" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/llNewRest"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="@string/add_new_restaurant"
                            android:textSize="@dimen/d16sp" />

                        <ImageView
                            android:layout_width="@dimen/d40dp"
                            android:layout_height="@dimen/d40dp"
                            android:layout_gravity="end"
                            android:contentDescription="@string/emptystring"
                            android:padding="@dimen/d10dp"
                            android:rotation="180"
                            android:src="@drawable/ic_arrow_back_black_24dp" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/llMyDocuments"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:visibility="gone">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="@string/my_documents"
                            android:textSize="@dimen/d16sp" />

                        <ImageView
                            android:layout_width="@dimen/d40dp"
                            android:layout_height="@dimen/d40dp"
                            android:layout_gravity="end"
                            android:contentDescription="@string/emptystring"
                            android:padding="@dimen/d10dp"
                            android:rotation="180"
                            android:src="@drawable/ic_arrow_back_black_24dp" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/llMyBankDetails"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="@string/my_bank_details"
                            android:textSize="@dimen/d16sp" />

                        <ImageView
                            android:layout_width="@dimen/d40dp"
                            android:layout_height="@dimen/d40dp"
                            android:layout_gravity="end"
                            android:contentDescription="@string/emptystring"
                            android:padding="@dimen/d10dp"
                            android:rotation="180"
                            android:src="@drawable/ic_arrow_back_black_24dp" />
                    </LinearLayout>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/d10dp"
                android:layout_marginTop="@dimen/d10dp"
                android:text="@string/application_preference"
                android:textSize="@dimen/d20sp"
                android:theme="@style/Title" />

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/d10dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/d10dp"
                    android:orientation="vertical">

                    <LinearLayout
                        android:id="@+id/llAboutUs"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="@string/about_us"
                            android:textSize="@dimen/d16sp" />

                        <ImageView
                            android:layout_width="@dimen/d40dp"
                            android:layout_height="@dimen/d40dp"
                            android:layout_gravity="end"
                            android:contentDescription="@string/emptystring"
                            android:padding="@dimen/d10dp"
                            android:rotation="180"
                            android:src="@drawable/ic_arrow_back_black_24dp" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/llContactUs"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="@string/contact_us"
                            android:textSize="@dimen/d16sp" />

                        <ImageView
                            android:layout_width="@dimen/d40dp"
                            android:layout_height="@dimen/d40dp"
                            android:layout_gravity="end"
                            android:contentDescription="@string/emptystring"
                            android:padding="@dimen/d10dp"
                            android:rotation="180"
                            android:src="@drawable/ic_arrow_back_black_24dp" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/llTermsConditions"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="@string/terms_conditions"
                            android:textSize="@dimen/d16sp" />

                        <ImageView
                            android:layout_width="@dimen/d40dp"
                            android:layout_height="@dimen/d40dp"
                            android:layout_gravity="end"
                            android:contentDescription="@string/emptystring"
                            android:padding="@dimen/d10dp"
                            android:rotation="180"
                            android:src="@drawable/ic_arrow_back_black_24dp" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/llPrivacyPolicy"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="@string/privacy_policy"
                            android:textSize="@dimen/d16sp" />

                        <ImageView
                            android:layout_width="@dimen/d40dp"
                            android:layout_height="@dimen/d40dp"
                            android:layout_gravity="end"
                            android:contentDescription="@string/emptystring"
                            android:padding="@dimen/d10dp"
                            android:rotation="180"
                            android:src="@drawable/ic_arrow_back_black_24dp" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/llRateApp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="@string/rate_app"
                            android:textSize="@dimen/d16sp" />

                        <ImageView
                            android:layout_width="@dimen/d40dp"
                            android:layout_height="@dimen/d40dp"
                            android:layout_gravity="end"
                            android:contentDescription="@string/emptystring"
                            android:padding="@dimen/d10dp"
                            android:rotation="180"
                            android:src="@drawable/ic_arrow_back_black_24dp" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/llLogout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="@string/Logout"
                            android:textSize="@dimen/d16sp" />

                        <ImageView
                            android:layout_width="@dimen/d40dp"
                            android:layout_height="@dimen/d40dp"
                            android:layout_gravity="end"
                            android:contentDescription="@string/emptystring"
                            android:padding="@dimen/d10dp"
                            android:src="@drawable/logout" />
                    </LinearLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

        </LinearLayout>

    </ScrollView>
</LinearLayout>